package java.com.pasterian.usefulmod.blocks;

import java.com.pasterian.usefulmod.UsefulStuffMod;

import net.minecraft.block.Block;
import net.minecraft.block.material.Material;

public class PurpleQuartz extends Block {

	public PurpleQuartz(Material mat){
		super(mat);
		this.setHarvestLevel("pickaxe", 1);
		this.setBlockName("PurpleQuartz");
		this.setCreativeTab(UsefulStuffMod.usefulStuffTabBlocks);
		this.setStepSound(Block.soundTypeStone);
		this.setHardness(2.0F);
		this.setBlockTextureName("pasterian" + ":" + "PurpleQuartz");
	}
}
