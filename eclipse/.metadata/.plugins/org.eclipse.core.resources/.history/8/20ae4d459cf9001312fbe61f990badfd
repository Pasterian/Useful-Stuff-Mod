package com.pasterian.usefulstuffmod.blocks.fluids;

import net.minecraft.block.material.Material;
import net.minecraftforge.fluids.Fluid;
import net.minecraftforge.fluids.FluidRegistry;

import com.pasterian.usefulstuffmod.UMBlocks;

import cpw.mods.fml.common.registry.GameRegistry;

public class UMFluids {

	public static Fluid enderWater = new Fluid("enderWater");
	
	
	public static void init() {
	
		
		FluidRegistry.registerFluid(enderWater);
		UMBlocks.enderWaterBlock = new UMBlocks.enderWaterBlock(enderWater, Material.water).setBlockName("yourFluid");
		GameRegistry.registerBlock(enderWaterBlock, MODID + "_" + yourFluidBlock.getUnlocalizedName().substring(5));
		yourFluid.setUnlocalizedName(yourFluidBlock.getUnlocalizedName());

	}
}
