package com.pasterian.usefulstuffmod.blocks.fluids;

import net.minecraftforge.fluids.Fluid;
import net.minecraftforge.fluids.FluidRegistry;

import com.pasterian.usefulstuffmod.UMBlocks;

import cpw.mods.fml.common.registry.GameRegistry;

public class UMFluids {

	public static Fluid enderWater = new Fluid("enderWater").setLuminosity(6).setViscosity(2000);
	
	
	public static void init() {
	
		FluidRegistry.registerFluid(enderWater);
		UMBlocks.enderWaterBlock = new BlockEnderWater().setBlockName("enderWaterBlock");
		GameRegistry.registerBlock(UMBlocks.enderWaterBlock, "UsefulStuffMod:enderWater");
		enderWater.setUnlocalizedName(UMBlocks.enderWaterBlock.getUnlocalizedName());

	}
}
